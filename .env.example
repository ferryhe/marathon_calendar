DATABASE_URL=postgresql://marathon:marathon@localhost:5432/marathon_calendar
REDIS_URL=redis://localhost:6379
SESSION_SECRET=replace-with-a-random-string
AI_API_KEY=your-ai-api-key
AI_MODEL=gpt-4.1-mini
# Optional. Defaults to OpenAI-compatible base URL.
AI_BASE_URL=https://api.openai.com/v1
# Use AI fallback extraction when rule-based extraction fails (admin-only feature; costs money).
AI_ENABLE_FALLBACK=false

# Brave Search (optional) for discovery workflow (admin-only).
BRAVE_API_KEY=your-brave-api-key

# Admin-only APIs for data sync management (Stage 1.3)
# If unset, /api/admin/* endpoints return 404.
ADMIN_API_TOKEN=replace-with-a-random-string

# Background sync scheduler
# - In production: enabled by default
# - In development: enable explicitly to avoid aggressive crawling by mistake
SYNC_SCHEDULER_ENABLED=false
# Optional override for interval (ms). Default: 300000 (5 minutes)
SYNC_SCHEDULER_INTERVAL_MS=300000

# Avatar storage mode:
# - If COS_REGION + COS_SECRET_ID + COS_SECRET_KEY are set, uploads go to Tencent COS.
# - Otherwise uploads fallback to local /uploads path.
COS_BUCKET=marathon-calendar-1256398230
COS_REGION=ap-guangzhou
COS_SECRET_ID=your_cos_secret_id
COS_SECRET_KEY=your_cos_secret_key
# Optional public CDN/domain, e.g. https://cdn.example.com
COS_PUBLIC_BASE_URL=
